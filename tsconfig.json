{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node"
    // "typeRoots": ["./node_modules/@types", "./types"],
    // "paths": {
    //   "@backstabbersgame/design-system/*": ["src/*"]
    // }
  },
  "include": [
    // "next-env.d.ts",
    "global.d.ts",
    "src"
    // "src/**/*",
    // ".next/types/**/*.ts",
    // "src/types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "next.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
