{
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@backstabbersgame/design-system/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "next.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
